# Customer Segmentation Analytics System - Environment Configuration

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_APP=app.py

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=5000

# File Upload Configuration
MAX_UPLOAD_SIZE=16
UPLOAD_FOLDER=data

# Clustering Configuration
DEFAULT_CLUSTERS=3
MAX_CLUSTERS=10
RANDOM_STATE=42
KMEANS_INIT_METHOD=k-means++
KMEANS_N_INIT=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Performance
ENABLE_PROFILING=False
